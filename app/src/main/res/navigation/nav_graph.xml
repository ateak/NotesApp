<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="ru.study.notesapp.MainFragment"
        android:label=""
        tools:layout="@layout/fragment_main" >
        <action
            android:id="@+id/action_mainFragment_to_createNoteFragment"
            app:destination="@id/createNoteFragment" />
        <action
            android:id="@+id/action_mainFragment_to_detailsNoteFragment"
            app:destination="@id/detailsNoteFragment" />
    </fragment>
    <fragment
        android:id="@+id/createNoteFragment"
        android:name="ru.study.notesapp.CreateNoteFragment"
        android:label=""
        tools:layout="@layout/fragment_create_note" >
        <action
            android:id="@+id/action_createNoteFragment_to_mainFragment"
            app:destination="@id/mainFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailsNoteFragment"
        android:name="ru.study.notesapp.DetailsNoteFragment"
        android:label=""
        tools:layout="@layout/fragment_details_note" >
        <action
            android:id="@+id/action_detailsNoteFragment_to_mainFragment"
            app:destination="@id/mainFragment" />
        <argument
            android:name="NoteId"
            app:argType="integer" />
    </fragment>
</navigation>